    "twilio": "^5.10.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "overrides": {
    "nodemailer-mock": {
      "nodemailer": "^6.x || ^7.x"
    },
    "react-hook-form-mui": {
      "@mui/x-date-pickers": "^8.2.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.55.1",
