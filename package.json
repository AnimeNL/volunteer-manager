{
  "name": "volunteer-manager-animecon",
  "version": "4.0.0",
  "description": "Volunteer Management environment for AnimeCon",
  "scripts": {
    "sync-db": "node ts-sql.build.mjs",
    "build": "next build",
    "build-prod": "node Docker.build.js 3001 volunteer-manager-docker",
    "build-staging": "node Docker.build.js 3002 volunteer-manager-staging",
    "build-turbo": "next build --turbopack",
    "build-with-bundle-analyzer": "cross-env ANALYZE=true next build",
    "serve": "next dev --turbo",
    "serve-with-scheduler": "cross-env APP_SCHEDULER_ENABLED=1 next dev --turbo",
    "lint": "biome check",
    "lint:fix": "biome lint --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beverloo/volunteer-manager.git"
  },
  "author": "Peter Beverloo <peter@animecon.nl>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/beverloo/volunteer-manager#readme",
  "engines": {
    "node": ">=24.0.0"
  },
  "overrides": {
    "jws": {
      "jwa": "^2.0.1"
    }
  },
  "dependencies": {
    "@beverloo/volunteer-manager-timeline": "^3.0.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@google/genai": "^1.39.0",
    "@mdxeditor/editor": "^3.52.3",
    "@mui/icons-material": "^7.3.7",
    "@mui/lab": "^7.0.1-beta.21",
    "@mui/material": "^7.3.7",
    "@mui/material-nextjs": "^7.3.7",
    "@mui/x-charts-pro": "^8.26.0",
    "@mui/x-data-grid-pro": "^8.26.0",
    "@mui/x-date-pickers": "^8.26.0",
    "@mui/x-license": "^8.26.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "bowser": "^2.13.1",
    "cookie": "^1.1.1",
    "d3-color": "^3.1.0",
    "d3-interpolate": "^3.0.1",
    "dayjs": "^1.11.19",
    "mariadb": "^3.4.5",
    "marked": "^17.0.1",
    "mui-color-input": "^7.0.0",
    "mui-markdown": "^2.1.0",
    "nanoid": "^5.1.6",
    "next": "^16.1.6",
    "nodemailer": "^7.0.13",
    "nuqs": "^2.8.7",
    "react": "^19.2.4",
    "react-avatar-editor": "14.0.0",
    "react-dom": "^19.2.4",
    "react-hook-form-mui": "^8.2.0",
    "scrypt-js": "^3.0.1",
    "set.prototype.symmetricdifference": "^1.1.3",
    "swr": "^2.4.0",
    "temporal-polyfill": "^0.3.0",
    "ts-sql-query": "^1.67.0",
    "twilio": "^5.12.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.1",
    "@simplewebauthn/typescript-types": "^8.3.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/d3": "^7.4.3",
    "@types/d3-color": "^3.1.3",
