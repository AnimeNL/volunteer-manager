{
    "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "includes": ["app/**/*.ts"],
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "domains": {
            "next": "recommended"
        },
        "rules": {
            "recommended": false,
            "complexity": {
                "noCommaOperator": "error",
                "noUselessContinue": "error",
                "noUselessStringRaw": "error"
            },
            "correctness": {
                "noInvalidConstructorSuper": "error",
                "noReactPropAssignments": "error",
                "noUnreachable": "error",
                "noUnusedImports": "error",
                "noUnusedPrivateClassMembers": "error",
                "noUnusedVariables": "warn",
                "useJsonImportAttributes": "error",
                "useJsxKeyInIterable": "warn",
                "useParseIntRadix": "warn"
            },
            "nursery": {
                "noNextAsyncClientComponent": "warn"
            },
            "style": {
                "noEnum": "error",
                "useConst": "warn",
                "useExportType": "warn",
                "useImportType": "warn",
                "useSelfClosingElements": "warn"
            },
            "suspicious": {
                "noDoubleEquals": "error",
                "noVar": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "enabled": false,
            "jsxQuoteStyle": "double",
            "quoteStyle": "single"
        }
    },
    "assist": {
        "enabled": false
    }
}
